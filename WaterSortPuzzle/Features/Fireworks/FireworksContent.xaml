<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:fireworks="clr-namespace:WaterSortPuzzle.Features.Fireworks"
             x:Class="WaterSortPuzzle.Features.Fireworks.FireworksContent"
             x:DataType="fireworks:FireworksViewModel"
             BackgroundColor="Transparent">
    <Grid RowDefinitions="auto,*" x:Name="MainGrid">
        <Button Text="Go" Command="{Binding StartAnimationCommand}" />
        <skia:SKCanvasView
            x:Name="Canvas"
            Grid.Row="1" />
    </Grid>
</ContentView>
